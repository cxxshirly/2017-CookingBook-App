<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.xu.chenfinalproject.Fragment.Picture2Fragment">

    <!-- TODO: Update blank fragment layout -->
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@mipmap/noodle"
        android:scaleType="centerCrop"
        android:alpha="0.4"

        />
<ScrollView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="@string/ramen_ingre"
        android:layout_marginTop="30dp"
        android:textSize="22dp"
        android:textColor="@android:color/white"
        android:textAlignment="center"/>

    <Button
        android:id="@+id/fragment_ramem2_servingbutton"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="Choose number of Serving" />
    </LinearLayout>

</ScrollView>

</FrameLayout>
