<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.xu.chenfinalproject.MainActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <TextView

        android:id="@+id/MainActivity_imageview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@mipmap/main"
        android:scaleType="centerCrop"
        android:alpha="0.4"

        />

    <Button
        android:id="@+id/MainActivity_welcome"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_marginTop="100dp"
        android:gravity="center"
        android:fontFamily="sans-serif"
        android:background="@null"
        android:text="Welcome"
        android:textColor="@android:color/white"
        android:textSize="70dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="             Swipe up and click on Welcome !"
            android:gravity="fill_vertical"
            android:layout_marginTop="200dp"
            android:textSize="20dp"/>

        <TextView
            android:id="@+id/MainActivity_plate"
            android:layout_width="437dp"
            android:layout_marginTop="400dp"
            android:layout_marginRight="20dp"
            android:layout_height="260dp"
            android:background="@mipmap/shake_beef_top"
            android:visibility="invisible"
            />

    </FrameLayout>
</LinearLayout>
